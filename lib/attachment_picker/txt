StreamAttachmentHandler.instance.pickFile().then(
            (value) {
              if (value == null) return;
              // Add the attachments to the controller.
              final List<Attachment> ds =
                  List.from(_effectiveController.attachments);
              ds.addAll(value);
              _effectiveController.attachments =
                  ds; //add trực tiếp thì bị lỗi  Cannot add to an unmodifiable list
              _effectiveFocusNode.requestFocus(); //focusField để show keyboard
            },
          );

          _onAttachmentButtonPressed
          showStreamAttachmentPickerModalBottomSheet